{
  "compilerOptions": {
    "target": "es2020",
    /* Modules */
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    },
    /* Emit */
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    /* Type Checking */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "useUnknownInCatchVariables": true,
    /* Completeness */
    "skipLibCheck": true,
  }
}